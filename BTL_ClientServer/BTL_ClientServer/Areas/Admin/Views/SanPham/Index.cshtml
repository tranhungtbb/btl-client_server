@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/HomeAdmin/Index.cshtml";
}


<p>
    @Html.ActionLink("Thêm Sản Phẩm", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ThuongHieu.MaThuongHieu)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MaSanPham)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TenSanPham)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Gia)
        </th>
