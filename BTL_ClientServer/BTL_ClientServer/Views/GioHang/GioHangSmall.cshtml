@model IEnumerable<BTL_ClientServer.Models.Entity.GioHang>
<div class="total-cart f-left">
    <div class="total-cart-in">
        <div class="cart-toggler">
            <a href="#">
                <span class="cart-quantity">@ViewBag._count</span><br>
                <span class="cart-icon">
                    <i class="zmdi zmdi-shopping-cart-plus"></i>
                </span>
            </a>
        </div>
        <ul>
            <li>
                <div class="top-cart-inner your-cart">
                    <h5 class="text-capitalize">Your Cart</h5>
                </div>
            </li>
            <li>
                <div class="total-cart-pro">
                    @foreach (var i in Model)
                    {
                        var img = (new BTL_ClientServer.Models.Functions.SanPham()).GetImageByProductId(i.IdSanPham)[0].TenAnh;
                        <!-- single-cart -->
                        <div class="single-cart clearfix">
                            <div class="cart-img f-left">
                                <a href="#">
                                    <img style="width: 50px; height:50px;" src="~/Content/User/img/product/@img"/>
                                </a>
                                <div class="del-icon">
                                    <a href="@Url.Action("RemoteGioHang", "GioHang",new { @id = i.Id})">
                                        <i class="zmdi zmdi-close"></i>
                                    </a>
                                </div>
                            </div>
                            <div class="cart-info f-left">
                                <p>
                                    <span>Giá:<strong>:</strong></span>@String.Format("{0:0,0}", i.Gia) vnđ.
                                </p>
                                <p>
                                    <span>Count: <strong>:</strong></span>@i.Soluong
                                </p>
                            </div>
                        </div>
                    }

                </div>
            </li>
            <li>
                <div class="top-cart-inner subtotal">
                    <h4 class="text-uppercase g-font-2">
                        Tổng  =
                        <span>@String.Format("{0:0,0}", @ViewBag._total) vnđ.</span>
                    </h4>
                </div>
            </li>
            <li>
                <div class="top-cart-inner view-cart">
                    <h4 class="text-uppercase">
                        <a href="/GioHang/Index">Xem giỏ hàng</a>
                    </h4>
                </div>
            </li>
        </ul>
    </div>
</div>
